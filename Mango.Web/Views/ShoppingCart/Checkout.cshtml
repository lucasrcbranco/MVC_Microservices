@model ShoppingCartDto

<form method="post">
    <input asp-for="ShoppingCartHeader.UserId" hidden />
    <input asp-for="ShoppingCartHeader.ShoppingCartHeaderId" hidden />
    <input asp-for="ShoppingCartHeader.CouponCode" hidden />
    <input asp-for="ShoppingCartHeader.Discount" hidden />
    <input asp-for="ShoppingCartHeader.CartTotal" hidden />

    <div class="border mt-2 p-4 rounded">
        <div class="container row">
            <div class="col-md-7 col-12">
                <span style="font-size:25px;" class="text-warning mb-2">Order Summary</span>
            </div>
            <div class="col-md-5 col-12">
                <a asp-action="CartIndex" class="btn btn-outline-warning form-control">Back to Cart</a>
            </div>
            <br /><br /><br />
            <hr />
            <div class="col-7">
                <div class="row pt-2">
                    <div class="col-12 py-2">
                        <input asp-for="ShoppingCartHeader.Name" placeholder="full name..." class="form-control" />
                        <span asp-validation-for="ShoppingCartHeader.Name" class="text-danger"></span>
                    </div>
                    <div class="col-12 py-2">
                        <input placeholder="email..." asp-for="ShoppingCartHeader.Email" class="form-control" />
                        <span asp-validation-for="ShoppingCartHeader.Email" class="text-danger"></span>
                    </div>
                    <div class="col-12 pt-2">
                        <label class="col-form-label">Order will be ready in 30minutes after placing order. If you place order when restaurant is closed it will be ready next day.</label>
                    </div>

                </div>
            </div>
            <div class="col-5">
                <div class="card mt-2">
                    <div class="card-body">
                        <div class=" d-none d-lg-block">
                            <div class="row text-danger">
                                <div class="col-6">
                                    Product Details
                                </div>

                                <div class="col-3">
                                    Price
                                </div>
                                <div class="col-3">
                                    Count
                                </div>
                            </div>
                        </div>
                        <hr />
                        @foreach (var cartObj in Model.ShoppingCartDetails)
                        {
                            <div class="row h-100">
                                <div class="col-6">
                                    <span style="font-size:20px">@cartObj.Product.Name</span>
                                </div>

                                <div class="col-3" style="font-size:11px;">
                                    <span style="font-size:17px;"> @cartObj.Product.Price.ToString("c")</span>

                                </div>
                                <div class="col-3" style="font-size:11px;">
                                    <span style="font-size:17px;"> @cartObj.Amount</span>
                                </div>
                            </div>
                            <hr />
                        }
                        <div class="row">
                            <div class="col-12 text-center pr-4 text-danger">
                                Order Total :  @Model.ShoppingCartHeader.CartTotal.ToString("c") <br />
                                @if (Model.ShoppingCartHeader.Discount > 0)
                                {
                                    <span class="text-success"> Order Discount :  @Model.ShoppingCartHeader.Discount.ToString("c")</span>
                                }
                            </div>
                        </div>

                    </div>
                    <div class="card-footer">
                        <div class="row">

                            <div class="col-12 ">
                                <button type="submit" class="btn btn-success form-control ">
                                    <span>Place Order</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
