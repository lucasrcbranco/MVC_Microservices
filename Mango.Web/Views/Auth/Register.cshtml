@model RegistrationRequestDto

<form method="POST">
    <div class="container border p-4">
        <div class="row text-center p-3">
            <h1>Register</h1>
        </div>

        <div class="row">
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="Name" class="form-control" placeholder="Name.." />
                <span asp-validation-for="Name" class="text-danger" />
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="Email" class="form-control" placeholder="Email.." type="email" />
                <span asp-validation-for="Email" class="text-danger" />
            </div>
            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <input asp-for="Password" class="form-control" placeholder="Password.." type="password" />
                <span asp-validation-for="Password" class="text-danger" />
            </div>

            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <select asp-for="Role" class="form-select"  asp-items="@ViewBag.RoleList">
                    <option disabled selected>--SELECT ROLE--</option>
                </select>
            </div

            <div class="col-12 col-md-6 offset-md-3 pb-2">
                <button type="submit" class="form-control btn btn-success">Register</button>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial"></partial>
}